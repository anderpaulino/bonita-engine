<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties">
			<props>
				<prop key="db.hibernate.dialect">org.hibernate.dialect.DerbyTenSevenDialect</prop>
				<prop key="db.datasource.classname">org.apache.derby.jdbc.EmbeddedXADataSource</prop>
				<prop key="db.url">jdbc:derby:${bonita.home}/server/platform/work/bonita6_journal;create=true;collation=TERRITORY_BASED:PRIMARY</prop>
				<prop key="db.user">sa</prop>
                <prop key="db.password"></prop>
                <prop key="db.databaseName">${bonita.home}/server/platform/work/bonita6_journal</prop>
                <prop key="db.databaseOptions">create=true;collation=TERRITORY_BASED:PRIMARY</prop>

			</props>
		</property>
	</bean>
	
	<bean id="driverProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties">
			<props>
				<prop key="user">${db.user}</prop>
				<prop key="password">${db.password}</prop>
<!--				<prop key="URL">${db.url}</prop> -->
                <prop key="databaseName">${db.databaseName};${db.databaseOptions}</prop>

			</props>
		</property>
	</bean>

</beans>
